<Window x:Class="basketapp.User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:basketapp"
        mc:Ignorable="d"
        Title="User" Height="300" Width="400">
    <Grid>
        <TextBox Height="40" Width="100" x:Name="user_TextBox" Margin="0,100,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Submit_button" Height="50" Width="100" Content="Submit Username" Margin="0,175,0,0" VerticalAlignment="Top" Click="Submit_button_Click"/>

    </Grid>
</Window>
